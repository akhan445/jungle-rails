<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>
  
  <% if enhanced_cart.empty? %>
    <div class="alert alert-info" role="alert">
      Your cart is empty. Return to <strong><%= link_to 'Home', :root %></strong>
    </div>
    
  <% else %>
    <%= render 'cart' %>
  <% end %>

</section>
